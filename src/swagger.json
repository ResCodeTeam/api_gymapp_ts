{
    "openapi":"3.0.0",
    "info":{
        "title":"Documentação da API GymApp",
        "description": "Documentação da api de suporte à aplicação GymApp",
        "contact": {
            "name": "Teste",
            "email": "teste@teste.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url":"http://localhost:8000/api/v1",
            "description":"API de teste"
        },
        {
            "url":"https://apigymapp.herokuapp.com/api/v1",
            "description":"API de produção server 1"
        },
        {
            "url": "https://apigymapp-c.herokuapp.com/api/v1",
            "description":"API de produção server 2"
        }
    ],
    "paths": {
        "/backend/funcoes":{
            "post":{
                "summary": "Registo de funções de user",
                "description": "Esta rota vai registar na base de dados novas funções para os utilizadores",
                "tags": ["Funcoes"],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref": "#/components/schemas/Funcao"
                            },
                            "examples": {
                                "funcao":{
                                    "value": {
                                        "nome": "Aluno"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500":{
                        "description": "ERROR"
                        
                    },
                    "200":{
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "$ref":"#/components/schemas/Funcao"
                                }
                            }
                        }

                    }
                    
                }
            }
        },
        "treinador/agenda/avaliacao": {
            "post": {
                "summary": "Registo de agendamentos de avaliações",
                "description": "Esta rota vai registar na base de dados agendamentos para a avaliação dos alunos",
                "tags": ["Agendamentos"],
                "requestBody":{
                    "content":{
                        "examples":{
                            "agendamento":{
                                "value":{
                                    "uid": "034309ce-e4cc-4ab6-ad2a-bc95eaa5405a",
                                    "dataAgendamento": "2022-03-30",
                                    "estado": 1,
                                    "ginasioId": "d81fdccd-e71c-46b1-bb8e-92b287777038",
                                    "treinadorId": ""
                                }
                            }
                        }

                    }
                },
                "responses": {
                    "500":{
                        "description": "ERROR"
                        
                    },
                    "200":{
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "$ref":"#/components/schemas/Funcao"
                                }
                            }
                        }

                    }
                    
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Funcao":{
                "type": "object",
                "properties": {
                    "nome":{
                        "type": "string"
                    }
                }
            }
        }
    }    

}